package pattern;

public class diff1 {

	
public static void main(String[] args) {
		
		int n=10;
		
		for (int i = 0; i <n; i++) {
			
			
			for (int j = 0; j <=i; j++) {
				System.out.print("*");
			}
			
			for (int j = 0; j <2*(n-i); j++) {
				System.out.print(" ");
				
			}
			
			for (int j = 0; j <=i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
		n=10;
		for (int i = n; i >= 0; i--) {
			
            for (int s = 0; s < n-i+1; s++) System.out.print(" ");
            for (int j = 1; j <= 2*i-1; j++) System.out.print("*");
            System.out.println();
        }
	}
}

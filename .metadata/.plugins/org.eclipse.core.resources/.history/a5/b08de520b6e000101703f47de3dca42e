package pattern;

public class Diff {

	public static void main(String[] args) {
		
		int n=5;
		
		for (int i = ; i <=n; i++) {
			
			
			for (int j = 0; j <=i; j++) {
				System.out.print("*");
			}
			
			for (int j = 0; j <4*(n-i)-1; j++) {
				System.out.print(" ");
				
			}
			
			for (int j = 0; j <=i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
		
	}
}
